{
  "name": "school-management-system",
  "version": "1.0.0",
  "description": "School Management System with React Frontend and Spring Boot Backend",
  "scripts": {
    "dev": "bash dev.sh",
    "prod": "bash prod.sh",
    "dev:stop": "docker-compose -f docker-compose.dev.yml down",
    "prod:stop": "docker-compose down",
    "dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "prod:logs": "docker-compose logs -f",
    "dev:frontend": "cd school-management-frontend && npm run dev",
    "dev:backend": "cd school-management-system && ./mvnw spring-boot:run",
    "build": "docker-compose build",
    "build:dev": "docker-compose -f docker-compose.dev.yml build",
    "clean": "docker-compose down -v && docker system prune -f",
    "clean:dev": "docker-compose -f docker-compose.dev.yml down -v && docker system prune -f"
  },
  "keywords": [
    "school",
    "management",
    "react",
    "spring-boot",
    "docker"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
