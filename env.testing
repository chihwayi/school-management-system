# Email Configuration (Testing)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_testing_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@schoolmanagement.test

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads

# CORS Configuration (Testing - Allow testing team access)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80,http://localhost:8080,http://your-testing-server:3000,http://your-testing-server:80,http://your-testing-server:8080

# Logging Configuration (Testing - More verbose for debugging)
LOG_LEVEL=DEBUG

# Testing Specific Configuration
TESTING_MODE=true
TESTING_DATA_ENABLED=true
TESTING_AI_ENABLED=true
TESTING_EMAIL_ENABLED=false
TESTING_SMS_ENABLED=false

# Performance Configuration (Testing)
CONNECTION_POOL_MAX_SIZE=10
CONNECTION_POOL_MIN_IDLE=2
CONNECTION_TIMEOUT=30000
